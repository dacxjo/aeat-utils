{
  "compilerOptions": {
    "incremental": true,
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./lib",
    "outDir": "./lib",
    "strict": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
